rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific character data (saved characters) and preferences (default character)
    match /userCharacters/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // User-specific Nexus session states
    match /userNexusStates/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Add other rules here if needed, for example, for public data
  }
}
